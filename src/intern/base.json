{
	"capabilities": {
		"project": "Dojo 2",
		"fixSessionCapabilities": false
	},

	"environments": [
		{ "browserName": "node" }
	],

	"suites": [
		"./dist/umd/tests/unit/all.js"
	],

	"functionalSuites": [
		"./dist/umd/tests/functional/all.js"
	],

	"plugins": [
		"./dist/umd/tests/plugins/echo-service.js"
	],

	"browser": {
		"loader": "./node_modules/@dojo/scripts/intern/loader.js",
		"suites+": [
			"./dist/umd/tests/unit/all-browser.js"
		]
	},

	"node": {
		"reporters": [
			{
				"name": "runner",
				"options": { "hideSkipped": true, "hidePassed": true }
			},
			{
				"name": "jsoncoverage",
				"options": {
					"directory": ".",
					"filename": "coverage.json"
				}
			},
			{
				"name": "htmlcoverage",
				"options": {
					"directory": "html-report"
				}
			}
		],

		"suites+": [
			"./dist/umd/tests/unit/all-node.js"
		]
	},

	"coverage": [
		"./dist/umd/src/**/*.js"
	],

	"configs": {
		"browserstack": {
			"tunnel": "browserstack",

			"capabilities+": {
				"browserstack.debug": false
			},

			"environments+": [
				{ "browserName": "internet explorer", "version": "11", "os": "WINDOWS", "os_version": [ "8.1", "10" ] },
				{ "browserName": "edge" },
				{ "browserName": "firefox", "platform": "WINDOWS" },
				{ "browserName": "chrome", "platform": "WINDOWS" },
				{ "browserName": "safari", "version": "10.1", "platform": "MAC" }
			],

			"maxConcurrency": 5
		},

		"local": {
			"tunnel": "selenium",
			"tunnelOptions": {
				"hostname": "localhost",
				"port": 4444
			},

			"environments+": [
				{ "browserName": "chrome" }
			]
		},

		"saucelabs": {
			"tunnel": "saucelabs",
			"tunnelOptions": {},

			"defaultTimeout": 10000,
			"environments+": [
				{ "browserName": "internet explorer", "version": [ "11.0" ], "platform": "Windows 7" },
				{ "browserName": "firefox", "version": "43", "platform": "Windows 10" },
				{ "browserName": "chrome", "platform": "Windows 10" }
			],
			"maxConcurrency": 4
		}
	}
}
